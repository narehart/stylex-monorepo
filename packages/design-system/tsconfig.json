{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "declaration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "./src/**/*.stories.tsx"]
}
